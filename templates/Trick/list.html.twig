{% extends "base.html.twig" %}

{% block body %}
    <section id="cover" class="cover">
        <div class="cover-inner">
            <div class="cover-catch">
                <b>E</b>at<br>
                <b>S</b>leep<br>
                <b>R</b>ide<br>
                <b>R</b>epeat<br>
            </div>
            <div class="cover-goto">
                <a href="#trick_list">
                    <i class="fas fa-arrow-alt-circle-down"></i>
                </a>
            </div>
        </div>
    </section>

    <section id="trick_list">
        <div class="container-fluid">
            <div class="trick-list">
                <div class="row">
                    {% for trick in tricks %}
                        <div class="col-xl-3 col-lg-4 col-md-6 col-xs-12">
                            <div class="trick-item">
                                <div class="trick-image">
                                    <a href="{{ path('trick_view', {'slug': trick.slug}) }}">
                                        <img src="https://dummyimage.com/480x270/4a4a4a/fff">
                                    </a>
                                </div>
                                <div class="trick-name">
                                    <ul class="flex-row">
                                        <li class="name">
                                            <a href="{{ path('trick_view', {'slug': trick.slug}) }}">
                                                {{ trick.name }}
                                            </a>
                                        </li>
                                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                            <li class="action edit">
                                                <a href="">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </li>
                                            <li class="action delete">
                                                <a href="">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </li>
                                        {% endif %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    <p><a href="{{ path('trick_create') }}" class="btn btn-primary">Ajouter</a></p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}